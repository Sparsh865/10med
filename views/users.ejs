<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 16px;
            margin: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            display: inline-block;
            vertical-align: top;
        }

        .card h3 {
            margin-top: 0;
        }

        .message {
            color: red;
            margin: 16px;
        }

        .success-message {
            color: green;
            margin: 16px;
        }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            margin: 20px 0;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
        }

        .back-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <h1>All Users</h1>

    <!-- Message display -->
    <% if (errorMsg) { %>
        <div class="message">
            <%= errorMsg %>
        </div>
        <% } %>

            <% if (successMsg) { %>
                <div class="success-message">
                    <%= successMsg %>
                </div>
                <% } %>

                    <!-- Back to Dashboard button -->
                    <a href="/admin" class="back-button">Back to Dashboard</a>

                    <!-- Display all users -->
                    <div>
                        <% users.forEach(user=> { %>
                            <div class="card">
                                <h3>
                                    <%= user.name %>
                                </h3>
                                <p><strong>Email:</strong>
                                    <%= user.email %>
                                </p>
                                <p><strong>Phone:</strong>
                                    <%= user.phoneNumber %>
                                </p>
                                <p><strong>Address:</strong>
                                    <%= user.address %>
                                </p>
                                <p><strong>Pin Code:</strong>
                                    <%= user.pinCode %>
                                </p>
                                <p><strong>Gender:</strong>
                                    <%= user.gender %>
                                </p>
                                <p><strong>Created At:</strong>
                                    <%= user.createdAt.toDateString() %>
                                </p>

                                <!-- Delete User Form -->
                                <form action="/admin/delete-user" method="POST">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button type="submit" class="delete-button">Delete User</button>
                                </form>
                            </div>
                            <% }); %>
                    </div>
</body>

</html>