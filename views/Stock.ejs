<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Stock</title>
    <style>
        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 16px;
            margin: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            display: inline-block;
            vertical-align: top;
        }

        .card h3 {
            margin-top: 0;
        }

        .message {
            color: red;
            margin: 16px;
        }

        .success-message {
            color: green;
            margin: 16px;
        }

        .back-button {
            display: inline-block;
            margin: 16px;
            padding: 8px 16px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }

        .salts-list {
            list-style-type: none;
            padding: 0;
        }

        .salts-list li {
            padding: 4px 0;
        }

        .toggle-button,
        .update-button,
        .delete-button {
            display: block;
            margin-top: 10px;
            padding: 8px;
            background-color: #007bff;
            color: white;
            text-align: center;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
        }

        .delete-button {
            background-color: #dc3545;
        }

        .update-button {
            background-color: #28a745;
        }
    </style>
</head>

<body>
    <h1>All Stock Items</h1>

    <% if (errorMsg) { %>
        <div class="message">
            <%= errorMsg %>
        </div>
        <% } %>
        <% if (successMsg) { %>
            <div class="success-message">
                <%= successMsg %>
            </div>
             <% } %>
                <a href="/admin" class="back-button">Back to Admin Dashboard</a>
                <div>
                    <% stock.forEach(item=> { %>
                        <div class="card">
                            <h3>Product Name: <%= item.productName %></h3>
                                <p><strong>Category:</strong>
                                    <%= item.categoryId ? item.categoryId.categoryName : 'N/A' %>
                                </p>
                                <p><strong>Type:</strong>
                                    <%= item.typeId ? item.typeId.typeName : 'N/A' %>
                                </p>
                                <p><strong>Price:</strong> â‚¹<%= item.productPrice %>
                                </p>
                                <p><strong>Stock Quantity:</strong>
                                    <%= item.stockQuantity %>
                                </p>
                                <p><strong>Prescription Required:</strong>
                                    <%= item.prescriptionRequired %>
                                </p>
                                <p><strong>Manufacturing Date:</strong>
                                    <%= item.manufacturingDate.toDateString() %>
                                </p>
                                <p><strong>Expiry Date:</strong>
                                    <%= item.expiryDate.toDateString() %>
                                </p>
                                <p><strong>Listed:</strong>
                                    <%= item.listed ? 'Yes' : 'No' %>
                                </p>

                                <% if (item.productSalt && item.productSalt.length> 0) { %>
                                    <p><strong>Salts:</strong></p>
                                    <ul class="salts-list">
                                        <% item.productSalt.forEach(salt=> { %>
                                            <li>
                                                <%= salt %>
                                            </li>
                                            <% }); %>
                                    </ul>
                                    <% } else { %>
                                        <p><strong>Salts:</strong> N/A</p>
                                        <% } %>

                                            <!-- Toggle Listed Status -->
                                            <form action="/admin/toggle-listed/<%= item._id %>" method="POST">
                                                <button type="submit" class="toggle-button">
                                                    <%= item.listed ? 'Unlist' : 'List' %>
                                                </button>
                                            </form>

                                            <!-- Update Stock Details -->
                                            <a href="/admin/update-stock/<%= item._id %>" class="update-button">Update
                                                Details</a>

                                            <!-- Delete Stock Item -->
                                            <form action="/admin/delete-stock/<%= item._id %>" method="POST"
                                                onsubmit="return confirm('Are you sure you want to delete this stock item?');">
                                                <button type="submit" class="delete-button">Delete Stock</button>
                                            </form>
                            </div>
                            <% }); %>
                    </div>
</body>

</html>