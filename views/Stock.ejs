<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Stock</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            color: #007bff;
        }

        .message,
        .success-message {
            text-align: center;
            margin: 16px;
        }

        .message {
            color: red;
        }

        .success-message {
            color: green;
        }

        .back-button {
            display: block;
            margin: 16px auto;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
            max-width: 200px;
            font-size: 16px;
        }

        .back-button:hover {
            background-color: #0056b3;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 16px;
            padding: 0 16px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .card h3 {
            margin-top: 0;
        }

        .salts-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .salts-list li {
            padding: 4px 0;
        }

        .card-actions {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 16px;
            width: 100%;
        }

        .toggle-button,
        .update-button,
        .delete-button {
            padding: 10px;
            color: #fff;
            text-align: center;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
            width: 100%;
            max-width: 200px;
            margin: 4px 0;
        }

        .toggle-button {
            background-color: #007bff;
            padding-left: 80px;
            padding-right: 100px;
        }

        .toggle-button:hover {
            background-color: #0056b3;
        }

        .update-button {
            background-color: #28a745;

        }

        .update-button:hover {
            background-color: #218838;
        }

        .delete-button {
            background-color: #dc3545;
            padding-left: 60px;
            padding-right: 60px;
        }

        .delete-button:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <h1>All Stock Items</h1>
    <% if (errorMsg) { %>
        <div class="message">
            <%= errorMsg %>
        </div>
        <% } %>

            <% if (successMsg) { %>
                <div class="success-message">
                    <%= successMsg %>
                </div>
                <% } %>

                    <a href="/admin" class="back-button">Back to Admin Dashboard</a>

                    <div class="card-container">
                        <% stock.forEach(item=> { %>
                            <div class="card">
                                <h3>Product Name: <%= item.productName %>
                                </h3>
                                <p>Category: <%= item.categoryId ? item.categoryId.categoryName : 'N/A' %>
                                </p>
                                <p>Type: <%= item.typeId ? item.typeId.typeName : 'N/A' %>
                                </p>
                                <p>Price: â‚¹<%= item.productPrice %>
                                </p>
                                <p>Stock Quantity: <%= item.stockQuantity %>
                                </p>
                                <p>Prescription Required: <%= item.prescriptionRequired %>
                                </p>
                                <p>Manufacturing Date: <%= item.manufacturingDate.toDateString() %>
                                </p>
                                <p>Expiry Date: <%= item.expiryDate.toDateString() %>
                                </p>
                                <p>Listed: <%= item.listed ? 'Yes' : 'No' %>
                                </p>

                                <% if (item.productSalt && item.productSalt.length> 0) { %>
                                    <p>Salts:</p>
                                    <ul class="salts-list">
                                        <% item.productSalt.forEach(salt=> { %>
                                            <li>
                                                <%= salt %>
                                            </li>
                                            <% }); %>
                                    </ul>
                                    <% } else { %>
                                        <p>Salts: N/A</p>
                                        <% } %>

                                            <div class="card-actions">
                                                <form action="/admin/toggle-listed/<%= item._id %>" method="POST">
                                                    <button type="submit" class="toggle-button">
                                                        <%= item.listed ? 'Unlist' : 'List' %>
                                                    </button>
                                                </form>
                                                <a href="/admin/update-stock/<%= item._id %>"
                                                    class="update-button">Update Details</a>
                                                <form action="/admin/delete-stock/<%= item._id %>" method="POST"
                                                    onsubmit="return confirm('Are you sure you want to delete this stock item?');">
                                                    <button type="submit" class="delete-button">Delete Stock</button>
                                                </form>
                                            </div>
                            </div>
                            <% }); %>
                    </div>
</body>

</html>